@model BillManagement.DTO.NewDC
@{
    ViewData["Title"] = "Create DC";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <form>
        <div class="row">
            <div class="col-6">
                <label class="form-label mt-4">Floating labels</label>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="DcNo" placeholder="Dc No.">
                    <label for="DcNo">Dc No.</label>
                </div>
            </div>
            <div class="col-6">
                <label class="form-label mt-4">Floating labels</label>
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" id="date" placeholder="name@example.com" >
                    <label for="date">Date</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div>
                    <select>
                        @foreach (Product prod in @Model)
                        {
                            
                        }
                    </select>
                </div>
            </div>
        </div>
        <div>
            <table id="DcTable">
                <thead>
                    <tr>
                        <th>PO Number</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Active</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </form>
    @section scripts{
        <script>
            $(document).ready(function () {
                $("#DcTable").DataTable({
                    "processing": true, // for show progress bar
                    "filter": true, // this is for disable filter (search box)
                    "orderMulti": false, // for disable multiple column at once
                });
            });
        </script>
    }
</body>
</html>
