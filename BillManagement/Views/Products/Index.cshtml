@model List<BillManagement.Models.Product>
<h2>Products</h2>
<div class="row justify-content-end">
    <div class="col-md-1">
        <a type="button" class="btn btn-info" asp-action="Create">Create</a>
    </div>

    <div>
        <table id="productTable">
            <thead>
                <tr>
                    <th>PO Number</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Active</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product prod in @Model)
                {
                <tr>
                    <td>@prod.PONumber</td>
                    <td>@prod.Name</td>
                    <td>@prod.Price</td>
                    <td>@prod.Active</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
<script>
    $(document).ready(function () {
        $("#productTable").DataTable({
            "processing": true, // for show progress bar
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
        });
    });
</script>
}


